<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/comments_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_menu"
            android:layout_alignTop="@+id/app_name"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comments"
            android:textSize="16sp"
            android:textColor="@color/page_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/search_button"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/menu_button"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_options_button"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/comment_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/comments_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="12sp"
            android:textColor="@color/page_title"
            android:text="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/page_title"
            android:text="Yorum"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comment_number_layout">

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/add_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/add_comment"
            android:textSize="12sp"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/shadow"/>
        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/icon_send_button"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>