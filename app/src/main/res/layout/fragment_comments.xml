<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/comment_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="12sp"
            android:textColor="@color/page_title"
            android:text="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/page_title"
            android:text="Yorum"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comment_number_layout">

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/add_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/add_comment"
            android:textSize="12sp"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/shadow"/>
        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/icon_send_button"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>